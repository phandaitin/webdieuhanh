@model VNETC_WebApp.Areas.Admin.Data.TPost

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa bài viết</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="Thumb1" />
            <input type="hidden" asp-for="Thumb2" />
            <input type="hidden" asp-for="Thumb3" />
            <input type="hidden" asp-for="Slug" />

            <div class="form-group">
                <label class="control-label">Tên công trình</label>
                <input asp-for="Tencongtrinh" class="form-control" />
                <span asp-validation-for="Tencongtrinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Chủ đầu tư</label>
                <input asp-for="Chudautu" class="form-control" />
                <span asp-validation-for="Chudautu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Website</label>
                <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label"> Tên bài viết</label>
                <input asp-for="PostName" class="form-control" />
                <span asp-validation-for="PostName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nội dung</label>
                <textarea rows="10" asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Hình ảnh 1</label>
                @*<input asp-for="Thumb1" class="form-control" />*@
                <input name="newThumb1" class="form-control" type="file" />
                <span asp-validation-for="Thumb1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Hình ảnh 2</label>
                @*<input asp-for="Thumb2" class="form-control" />*@
                <input name="newThumb2" class="form-control" type="file" />
                <span asp-validation-for="Thumb2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Hình ảnh 3</label>
                @*<input asp-for="Thumb3" class="form-control" />*@
                <input name="newThumb3" class="form-control" type="file" />
                <span asp-validation-for="Thumb3" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TimeStart" class="control-label"></label>
                <input asp-for="TimeStart" class="form-control" />
                <span asp-validation-for="TimeStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeEnd" class="control-label"></label>
                <input asp-for="TimeEnd" class="form-control" />
                <span asp-validation-for="TimeEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <hr />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>
 

