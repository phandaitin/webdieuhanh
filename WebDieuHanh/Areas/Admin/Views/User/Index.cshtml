@model IEnumerable<WebApp.Areas.Admin.Data.TUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

    int No = 0;
}

@section Scripts_teoti{
    <script>
        setTimeout(function () {
            $('#Alert_teoti').fadeOut('slow');
        }, 2000);
    </script>
}


<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    @if (ViewBag.MsgErr != null)
                    {
                        <div class="alert alert-danger" id="Alert_teoti" role="alert">
                            @ViewBag.MsgErr
                        </div>
                    }

                    <h1 class="card-title">User</h1>
                    <table class="table datatable table-hover">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.MaDv)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.UserName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Password)
                                </th>*@
                                <th>
                                    <a asp-action="Create" style="color:blue">Create New</a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(++No)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaDv)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FullName)
                                    </td>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.Password)
                                    </td>*@
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>

